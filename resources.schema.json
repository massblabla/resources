{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/massblabla/resources/refs/heads/main/resources.schema.json",
    "title": "Resources Schema",
    "type": "object",
    "properties": {
        "resourceId": {
            "description": "ID of the resource",
            "type": "string"
        },
        "resourceList": {
            "description": "Resources in the resource",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "resourceId": {
                        "description": "ID of the resource",
                        "type": "integer"
                    },
                    "resourceDir": {
                        "description": "Directory of the resource",
                        "type": "string"
                    },
                    "resources": {
                        "description": "List of resources",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "resourceId": {
                                    "description": "ID of the resource",
                                    "type": "integer"
                                },
                                "resourcePath": {
                                    "description": "Path of the resource",
                                    "type": "string"
                                },
                                "resourceDescription": {
                                    "description": "Description of the resource",
                                    "type": "string",
                                    "nullable": true
                                },
                                "sha256": {
                                    "description": "SHA-256 hash of the resource",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "resourceId",
                                "resourcePath",
                                "resourceDescription",
                                "sha256"
                            ]
                        }
                    }
                },
                "required": [
                    "resourceId",
                    "resourceDir",
                    "resources"
                ]
            }
        }
    },
    "required": [
        "resourceId",
        "resourceList"
    ]
}